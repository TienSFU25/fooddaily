	<script>

		var APP_ID = "1aeab161";
		var APP_KEY = "30949c53cf846dfc493a20eebfbbd422";
		var rows = [];
		var table;
		var data;

		function queryYummly(foodSearch) {
			var call = "http://api.yummly.com/v1/api/recipes?_";
			// "api.yummly.com/v1/api/recipes?_app_id=1aeab161&_app_key=30949c53cf846dfc493a20eebfbbd422&+onion+soup";

			var params = foodSearch.split(" ");

			call += "app_id=" + APP_ID + "&_app_key=" + APP_KEY + "&q=";

			for (var i = 0; i < params.length; i++) {
				// alert(params[i]);
				call += "+" + params[i];
			};

			// call += "app_id=" + APP_ID + "&_app_key=" + APP_KEY + "&q=";
			
			// alert(call);
			// $("#q").val(call);

			var jqhxr = $.ajax({
				type: "GET",
				url: call,
				success: function(data) {
					// alert("success search");
					updateTableResults(data);
				}, 
				error: function() {
					alert("no results found");
				}
			});
		}

		function yummlyGetById(foodId) {
			var call = "http://api.yummly.com/v1/api/recipe/";
			call += foodId + "?_";
			call += "app_id=" + APP_ID + "&_app_key=" + APP_KEY;

			// alert(call);
			
			var jqhxr = $.ajax({
				type: "GET",
				url: call,
				success: function(data) {
					alert("success get by id: " + call);
					// updateResults(data);
				}, 
				error: function() {
					alert("no results found (by id)");
				}
			})
		}

		function updateResults(data) {
			var info = "<li>" + data.name + "</li>";
		  	info += "<ul>";
		  	info += "<li> img goes here </li>"; // eg 	  	info += "<li><img src=\"http://lh6.ggpht.com/Sn2qCFY3fG8cI71t9BdZ-Jyb9RyPh_0Dg79ii9iRNHhd97yQy5MYg0e9sun3HxY9inRax15XWkBSrQ3RCQGq0A=s360\"></img></li>";
			info += "<li>Yield: " + data.yield + "</li>";


			info += "<li>Ingredients: ";
			info += "<ul>"
			for (i = 0; i < data.ingredientLines.length; i++){
				info += "<li>" + data.ingredientLines[i] + "</li>";
			}
			info += "</ul></li>"

			info += "<li><a href=\"" + data.source.sourceRecipeUrl + "\">URL</a></li>";
			info += "</ul><br>"
			// info += "<li><img src=\"" + data.images.hostedLargeUrl + "\"></img></li>";
			// info += data.images.hostedLargeUrl; // <img src="http://i2.yummly.com/Hot-Turkey-Salad-Sandwiches-Allrecipes.l.png"></img>
			// info +="<li><img src=\"http://i2.yummly.com/Hot-Turkey-Salad-Sandwiches-Allrecipes.l.png\"></img></li>";
				
			$("searchResults").append(info);
		}

		function updateTableResults(data) {
			rows = new Array();
			// var i = 0;
			// var len = data.matches.length;
			for(var i = 0; i < data.matches.length; i++) {
				var name = data.matches[i].recipeName;
				var brand = data.matches[i].sourceDisplayName;

				var jsonIngredients = data.matches[i].ingredients;
				var ingredients = jsonIngredients[0];// = data.matches[i].ingredients;
				for(var index = 1; index < jsonIngredients.length; index++) {
					ingredients += ", " + jsonIngredients[index];
				}

				var prepTime = data.matches[i].totalTimeInSeconds;	
				var rating = data.matches[i].rating;
				var id = data.matches[i].id;

				var row = [
					name,
					brand,
					ingredients,
					prepTime,
					rating,
					id
				];

				rows.push(row);
			}
			
			drawTable(rows);
		}

		$(document).ready(function() {

			// event listener
			$('#recipeSearch').keypress(function(e){
				if(e.keyCode == 13) {
					// disable form submission
					e.preventDefault();
					var query = $('#q').val(); //"Hot-Turkey-Salad-Sandwiches-Allrecipes";
					// alert(query);
					queryYummly(query);
				}
			});
		});
	</script>
</head>

<body>
