	<!--<script src="/javascript/getrecipes.js"></script>-->
	<script "text/javascript">

		google.load("visualization", "1", {packages:["table"]});
		google.setOnLoadCallback(drawTable);

		function drawTable() {
		table = new google.visualization.Table($('.recipeTable').get(0));

		data = new google.visualization.DataTable();

		var fields = [
			"recipeName",
			"sourceDisplayName",
			"ingredients",
			"totalTime (seconds)",
			"rating (out of 5)",
			"id"
		];

		data.addColumn('string', fields[0]);
		data.addColumn('string', fields[1]);
		data.addColumn('string', fields[2]);
		data.addColumn('number', fields[3]);
		data.addColumn('number', fields[4]);
		data.addColumn('string', fields[5]);

		data.addRows(rows);


		// table.view = new google.visualization.DataView(data);
	 // 	table.view.hideColumns(fields[5]);

		google.visualization.events.addListener(data, 'select', selectTableListener);

		table.draw(data, {showRowNumber: false});
	}

	function selectTableListener() {
		var idx = table.getSelection();
		var selectedRow = idx[0]['row'];

		var recipeId = data.getValue(selectedRow, 5);
		yummlyGetById(recipeId);
	}

	</script>
