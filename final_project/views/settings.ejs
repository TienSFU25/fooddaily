<form id="settings">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <p>Dietary restrictions (for use with Yummly)</p>
    <select id="restrictions">
      <option value="none" <% if (row.diet == 'none') { %> selected="selected" <% } %> >None</option>
      <option value="vegan" <% if (row.diet == 'vegan') { %> selected="selected" <% } %> >Vegan</option> 
      <option value="lacto_vege" <% if (row.diet == 'lacto_vege') { %> selected="selected" <% } %> >Lacto vegetarian</option> 
      <option value="ovo_vege" <% if (row.diet == 'ovo_vege') { %> selected="selected" <% } %> >Ovo vegetarian</option> 
      <option value="pesc" <% if (row.diet == 'pesc') { %> selected="selected" <% } %> >Pescetarian</option> 
      <option value="lacto_pesc" <% if (row.diet == 'lacto_pesc') { %> selected="selected" <% } %> >Pescetarian-lacto</option> 
      <option value="ovo_pesc" <% if (row.diet == 'ovo_pesc') { %> selected="selected" <% } %> >Pescetarian-ovo</option> 
      <option value="paleo" <% if (row.diet == 'paleo') { %> selected="selected" <% } %> >Paleo</option>
    </select></br>
    <br>


<p>Additional restrictions</p>
<input type="checkbox" id="dairy" <% if (row.dairy) { %> checked <% } %> >Dairy-Free<br>
<input type="checkbox" id="egg" <% if (row.egg) { %> checked <% } %> >Egg-Free<br>
<input type="checkbox" id="gluten" <% if (row.gluten) { %> checked <% } %> >Gluten-Free<br>
<input type="checkbox" id="peanut" <% if (row.peanut) { %> checked <% } %> >Peanut-Free<br>
<input type="checkbox" id="seafood" <% if (row.seafood) { %> checked <% } %> >Seafood-Free<br>
<input type="checkbox" id="sesame" <% if (row.sesame) { %> checked <% } %> >Sesame-Free<br>
<input type="checkbox" id="soy" <% if (row.soy) { %> checked <% } %> >Soy-Free<br>
<input type="checkbox" id="sulfite" <% if (row.sulfite) { %> checked <% } %> >Sulfite-Free<br>
<input type="checkbox" id="treeNut" <% if (row.treeNut) { %> checked <% } %> >Tree Nut-Free<br>
<input type="checkbox" id="wheat" <% if (row.wheat) { %> checked <% } %> >Wheat-Free<br>


    <br>
    <!-- <input type="submit" value="Save"> -->
    <button class="pure-button" id="submit">Save your settings</button>

</form>

